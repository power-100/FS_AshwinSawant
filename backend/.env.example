# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/student-commute-optimizer
MONGODB_TEST_URI=mongodb://localhost:27017/student-commute-optimizer-test

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
BCRYPT_ROUNDS=12

# Email Service (using Gmail SMTP as example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM_NAME=Student Commute Optimizer
EMAIL_FROM_ADDRESS=noreply@studentcommute.app

# Geocoding Service (OpenRouteService - free tier)
OPENROUTESERVICE_API_KEY=your-openrouteservice-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=debug
LOG_DIR=logs

# Anonymous Username Configuration
USERNAME_ADJECTIVES=Swift,Quick,Bright,Smart,Cool,Fast,Sharp,Clear
USERNAME_NOUNS=Eagle,Raven,Fox,Wolf,Bear,Lion,Tiger,Hawk
USERNAME_NUMBER_RANGE_MIN=100
USERNAME_NUMBER_RANGE_MAX=999

# Route Matching Algorithm Settings
MINIMUM_OVERLAP_THRESHOLD=25
MAXIMUM_MATCHES_PER_REQUEST=20
ROUTE_CALCULATION_TIMEOUT=10000

# WebSocket Configuration
WEBSOCKET_CORS_ORIGIN=http://localhost:3000
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000

# File Upload (if needed for profile pictures)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Security
HELMET_CONTENT_SECURITY_POLICY=false
SESSION_SECRET=your-session-secret-change-this